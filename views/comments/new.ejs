<%- include("../partials/header"); -%>
    <div class="container">
        <div class="jumbotron text-center">
            <h1>Add new Comment to <%= post.name %></h1>
        </div>
        <a href="/posts/<%= post._id %>">Go back</a>

        <form action="/posts/<%= post._id %>/comments" method="POST">
            <div class="input-group" style="width: 40%; margin: 25px auto;">
                <div class="input-group-prepend">
                  <span class="input-group-text">Comment: <span>
                </div>
                <textarea name="comment[content]" class="form-control"></textarea>
            </div>
             <div class="form-group" style="width: 40%; margin: 10px auto;">
                 <input type="submit" class="btn btn-primary">
             </div>
            
        </form>
    </div>
    
<%- include ("../partials/footer"); -%>