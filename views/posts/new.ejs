<%- include("../partials/header"); -%>
<div class="container">
    <div class="jumbotron text-center">
        <h1>Add new posts</h1>
    </div>
    <a href="/posts">Go back</a>

    <form action="/posts" method="POST">
        <div class="input-group" style="width: 40%; margin: 25px auto;">
            <div class="input-group-prepend">
                <span class="input-group-text">Title</span>
            </div>
            <input type="text" name="post[title]" class="form-control">
        </div>
        <div class="input-group" style="width: 40%; margin: 25px auto;">
            <div class="input-group-prepend">
                <span class="input-group-text">Thumbnail</span>
            </div>
            <input type="text" name="post[thumbnail]" class="form-control">
        </div>
        <div class="input-group" style="width: 40%; margin: 25px auto;">
            <div class="input-group-prepend">
                <span class="input-group-text">About<span>
            </div>
            <textarea name="post[desc]" class="form-control"></textarea>
        </div>
        <div class="form-group" style="width: 40%; margin: 10px auto;">
            <input type="submit" class="btn btn-primary">
        </div>

    </form>
</div>

<%- include ("../partials/footer"); -%>